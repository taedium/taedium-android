<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlAddTagDialog"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/bManualTagAdd"
        style="@style/BaseView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/add">
    </Button>
    <EditText
        android:id="@+id/etAddTag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bManualTagAdd"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">
    </EditText>
    <Button
        android:id="@+id/bSaveClose"
        style="@style/BaseView"
        android:layout_width="fill_parent"
        android:layout_below="@id/etAddTag"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/saveclose">
    </Button>
</RelativeLayout>