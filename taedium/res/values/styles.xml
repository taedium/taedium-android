<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Colours -->
    <!-- color name="theme_background">#FFBE00</color-->
    <color name="transparent_background">#88000000</color>
   
    <!-- Themes --> 
    <style name="Theme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/main_background_gradient</item>
        <!--  item name="android:colorBackground">@color/theme_background</item-->
        <!-- item name="android:background">@drawable/main_background_gradient</item-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Base Styles -->
    <style name="BaseView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <!-- Dialog Controls -->    
    <style name="DialogControl" parent="@style/BaseView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    
    <style name="DialogLabel" parent="@style/BaseView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>
    
    <style name="DialogButton" parent="@style/BaseView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:width">65dp</item>
    </style>
        
    <!-- List view style used on main page and top of profile page -->
    <style name="Listview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">3px</item>
        <item name="android:paddingLeft">3px</item>
        <item name="android:paddingRight">3px</item>
        <item name="android:paddingTop">3px</item>
        <item name="android:paddingBottom">15px</item>
        <item name= "android:cacheColorHint">@android:color/transparent</item>
    </style>
    
    <style name="ListviewActivityOverview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:divider">#000000</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:paddingTop">1px</item>
        <item name= "android:cacheColorHint">@android:color/transparent</item>
    </style>   
    
    <!-- Divider used on landing page and profile page -->
    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DividerLandingPage" parent = "@style/Divider">
        <item name="android:layout_margin">3px</item>
        <item name="android:background">@drawable/filter_gradient</item>
    </style>
    
    <style name="DividerProfilePage" parent = "@style/Divider">
        <item name="android:background">@drawable/header_gradient</item>
    </style>
    
    <!-- Profile page white block style -->
    <style name="ProfileSectionLayout" parent="@style/BaseView">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/list_item_gradient</item> 
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <!-- Add Activity Wizard Styles -->
    <style name="WizardLayout" parent="@style/BaseView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
    <style name="AddNavButton" parent="@style/BaseView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
	    <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item> 
        <item name="android:background">@drawable/b_add_nav_button</item>
    </style>
    
    <style name="AddTextView" parent="@style/BaseView">
        <item name="android:textColor">#000000</item>
    </style>
   
    <!-- Standard Add Activity Styles  -->
    <style name="StandardControl" parent="@style/BaseView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    
    <style name="StandardEditText" parent="@style/StandardControl">
        <item name="android:width">120dp</item>
        <!-- item name="android:background">#00FFFFFF</item-->
    </style>
    
    <style name="StandardLabel" parent="@style/BaseView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="StandardButton" parent="@style/BaseView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:width">100dp</item>
    </style>
    
    <style name="StandardLayout" parent="@style/BaseView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="StandardRelativeLayout" parent="@style/BaseView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    
    <!--  Register Page Styles -->
    <style name="RegisterRelativeLayout" parent="@style/BaseView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>        
    </style>
    
    <style name="RegisterLabel" parent="@style/BaseView">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="RegisterEditText" parent="@style/BaseView">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:minWidth">160dp</item>
    </style>
    
    <!-- Header --> 
    <style name="Header">        
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>        
        <item name="android:background">@drawable/header_gradient</item>
    </style>
    
    <style name="HeaderWidget">
   		<item name="android:layout_width">wrap_content</item>
   		<item name="android:textSize">12dip</item>
   		<item name="android:layout_height">35dp</item>
   		<item name="android:minWidth">25dp</item>
   		<item name="android:paddingLeft">5dp</item>
   		<item name="android:paddingRight">5dp</item>
   		<item name="android:paddingTop">9dp</item>
   		<item name="android:paddingBottom">9dp</item>
   		<item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="HeaderButton" parent="@style/HeaderWidget">
   		<item name="android:textSize">10dip</item>
   		<item name="android:background">@drawable/b_header_bg_fsm</item>
    </style>
    
    <!-- Footer -->
    <style name="Footer">        
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">35dp</item>
    </style>
    
    <style name="FooterButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/b_footer_bg_fsm</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <!-- Recommendation -->
    <style name="RecView" parent="BaseView">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <!-- Custom Dialogs -->
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    	<item name="android:windowTitleStyle">@style/DialogTitle</item>
    	<item name="android:windowBackground">@drawable/dialog_background</item>
    	<item name="android:textColor">#000000</item>
    </style>

    <style name="DialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20.5sp</item>
	    <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
        <item name="android:background">@drawable/dialog_title_background</item>
    </style>
</resources>
